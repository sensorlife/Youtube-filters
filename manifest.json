{
    "name": "__MSG_name__",
	"short_name": "__MSG_short_name__",
    "manifest_version": 2,
	"version":"1.5.0.0",
    "description": "__MSG_description__",
	"default_locale": "en",
    "browser_action": {
		"default_icon": "48.png",
		"default_title": "__MSG_default_title__",
		"default_popup": "popup.html"
	},
	"background":{
		"page":"background.html",
		"persistent": false
	},
	"content_scripts":[
	{
		"matches": [ "*://*.youtube.com/*" ],
		"css": ["app_player.css"],
		"run_at": "document_end"
	}
	],
	"permissions": [
		"tabs",
        "activeTab",
        "storage",
        "<all_urls>",
		"webNavigation"
	],
	"icons": {"48": "48.png",
			"16": "16.png",
			"128": "128.png"},
	"web_accessible_resources": ["32.png"],
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}